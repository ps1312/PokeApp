<% include ./partials/header.ejs %>

<div class="row">
    <div class="col-lg-4">
        <img class="thumbnail" style="max-width: 100%" src="<%= photoUrl %>">
        <form action="/edit_picture" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input type="file" class="form-control" name="profileImg">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Enviar</button>
            </div>
        </form>
    </div>
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading"> Treinador: &nbsp; <%= currentUser.username %></div>
            <div class="panel-body">
                <p>Email: &nbsp; <%= currentUser.email %></p>
                <hr>
                <h3>Para sua pokedex nacional ainda faltam <%= nationalPokedexCount - currentUser.catchedPokemonsNames.length %> pokemons!</h3>
                <ul class="list-group">
                    <h4>Para mais informações sobre o pokemon, clique em seu nome.</h4>
                    <a class="btn btn-default" href="/catch/game_version"> Capturar mais pokemons </a>                    
                    <h3 class="list-group-item active">
                        Pokemons capturados
                    </h3>
                    <% currentUser.catchedPokemonsNames.forEach(function(pokemon){ %>
                        <li class="list-group-item">
                            <a href="/catch/pokemon/<%= pokemon %>"><%= pokemon %></a>
                        </li>
                    <% }) %>
                </ul>
                </div>
            </div>
    </div>
</div>